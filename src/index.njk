<section id="on-going">
    <h3>On going stuff:</h3>
    <ul>
        {%- for job in collections.jobs -%}
            <li>{{ job.data.profession }} {{ job.data.suffix }} <a target="_blank" href="{{ job.data.link }}">{{ job.data.company }}</a></li>
