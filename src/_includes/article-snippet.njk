
<div class="row {% if loop.index % 2 == 0 %} bg-light {% endif %}">
    <div class="custom-container">
        <div class="row mb-2 py-3 rounded article-snippet">
            <div class="col-12 col-lg-6 py-3 d-flex flex-column justify-content-between align-items-start">
                <div class="text-top mb-4">
                    <h5 class="card-title fs-3 mb-0">{{ post.data.title }}</h5>
                    <small class="mb-2 d-inline-block">{{ post.date | postDate }}</small>
                    <p class="card-text">{{ post.data.description }}</p>
                </div>
                <a href="{{ post.url }}" class="btn btn-success">Read Article</a>
            </div>
            <div class="col-12 col-lg-6">
                <img class="img-fluid rounded" src="{{ post.data.image }}" class="card-img-top" alt="{{ post.data.titleAlt }}">
            </div>
        </div>
    </div>
</div>
